    <TargetFramework Condition="'$(TargetFramework)' == ''">net8.0</TargetFramework>
    <AdminOrgName>xperienceCommunity</AdminOrgName>
  
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Nullable>disable</Nullable>
    <HotChocolateImplicitUsings>disable</HotChocolateImplicitUsings>
  </PropertyGroup>
  <ItemGroup>
    <AdminClientPath Include="Admin\Client\dist\**">
      <ProjectName>multichoice-formcontrol</ProjectName>
    </AdminClientPath>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Admin\Client\node_modules\**" />
    <Compile Remove="Admin\Client\src\custom-layout\**" />
    <Compile Remove="Admin\UIPages\CustomTemplate\**" />
    <Content Remove="Admin\Client\src\custom-layout\**" />
    <Content Remove="Admin\UIPages\CustomTemplate\**" />
