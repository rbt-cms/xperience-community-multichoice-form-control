    <None Remove="Admin\Client\node_modules\**" />
    <None Remove="Admin\Client\src\custom-layout\**" />
    <None Remove="Admin\UIPages\CustomTemplate\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Admin\UIPages\UserListExtender\UserListExtender.cs" />
  </ItemGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="kentico.xperience.admin" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Admin\UIPages\UserListExtender\" />
  </ItemGroup>
</Project>